<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.wpi.alcowatch.alcowatch.BACUpdateDisplayActivity"
    tools:deviceIds="wear">

    <TextView
        android:id="@+id/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/appTitle"
        android:textAppearance="@style/TextAppearance.WearDiag.Title"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:typeface="serif"
        android:lineSpacingExtra="10sp"
        android:textColor="@color/Title"
        android:layout_weight="1.15"
        android:paddingTop="20px" />


    <TextView
        android:text="Sober"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.Wearable.Large"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_weight="0.72" />

    <Button
        android:text="Record"
        android:layout_width="match_parent"
        android:id="@+id/recordButton"
        tools:background="@color/colorPrimary"
        android:elevation="11dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:onClick="onRecordButtonClick"
        android:layout_weight="1" />

</LinearLayout>